<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    controllerName="mainpath.controller.Detail2"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:core="sap.ui.core">
	<Page 
		id="detailCurrentPizza" 
		title="{pizzadata>name}" 
		class="sapUiStdPage">
		<content>
			<core:Fragment fragmentName="mainpath.view.fragment.detailpage" type="XML"/>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button type="Reject" text="˅" press=".onQuantityDown"/>
				<Input type="Number" value="{pizzadata>quantity}" width="4em" liveChange="onValidatePizzaQuantity" id="mainBasketInput"/> 
				<Button type="Accept" text="˄" press=".onQuantityUp"/>
				<!-- <ToolbarSpacer/>
				<CheckBox text="Выбрать пиццу" selected="false" /> -->
				<!-- <Button type="Reject" text="Cancel"/> -->
			</Toolbar>
		</footer>
	</Page>
</mvc:View>