<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    controllerName="productpath.controller.PizzaInfo"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:core="sap.ui.core"
	xmlns:mycontroll="app.lib">
	<Page 
		id="detailCurrentPizza" 
		class="sapUiStdPage"
		>
		<!-- showNavButton="{device>/isPhone}" 
		navButtonPress="pressNavBtn" -->
		<customHeader>
			<Toolbar>
				<Button
					icon="sap-icon://menu2"
					press="pressNavBtn"
					visible="{device>/isPhone}"/>
                <ToolbarSpacer/>
                <Title
                    text="{pizzadata>name}"
                    textAlign="Center"/>
                <ToolbarSpacer/>
			</Toolbar>
		</customHeader>
		<content>
			<core:Fragment fragmentName="productpath.view.fragment.detailpage" type="XML"/>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<mycontroll:ScrollInput 
					liveChange="onSIChange" 
					minValue="0" 
					maxValue="9"
					width="4em"
					value="{pizzadata>quantity}"
				/>
				<Button 
					type="Accept" 
					text="Корзина" 
					press="onBasket"
					visible="{device>/isPhone}"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>