{
    "_version": "1.12.0",
    "sap.app": {
      "id": "app",
      "type": "application",
      "i18n": "i18n/i18n.properties",
      "title": "{{appTitle}}",
      "description": "{{appDescription}}",
      "applicationVersion": {
        "version": "1.0.0"
      }
    },
    "sap.ui": {
      "technology": "UI5",
      "deviceTypes": {
          "desktop": true,
          "tablet":  true,
          "phone":   true
      }
    },
    "sap.ui5": {

        "rootView": {
            "viewName": "mainpath.view.Main",
            "type":  "XML",
            "async": true,
            "id":    "app"
        },

        "dependencies": {
            "minUI5Version": "1.60",
            "libs": {
                "sap.m": {}
            },
            "contentDensities": {
              "compact": true,
              "cozy": true
            }
        },

        "models": {
            "i18n": {
                "type": "sap.ui.model.resource.ResourceModel",
                "settings": { "bundleName": "app.i18n.i18n" }
            },
            "pizzadata": {
              "type": "sap.ui.model.json.JSONModel",
              "uri": "/modules/main/model/pizzadata.json"
            }
        },

        "resources": {
          "css": [
            { "uri": "css/style.css" }
          ]
        },

        "routing": {

          "config": {
            "routerClass": "sap.m.routing.Router",
            "viewType":    "XML",
            "viewPath":    "mainpath.view", 
            "controlAggregation": "detailPages",
            "controlId":   "app",
            "async": true,
            "bypassed": {
              "target": ["defaultMaster", "notFound"]
            }
          },

          "routes": [
            {
              "pattern": "",
              "name":    "startPages",
              "target":  ["defaultMaster", "defaultDetail"]
            },
            {
              "pattern": "pizzalist",
              "name":    "arrayPizza",
              "target":  ["pizzaList", "defaultDetail"]
            },
            {
              "pattern": "pizzalist/{pizzaURLname}",
              "name":    "currentPizza",
              "target":  ["pizzaList", "detailPizza"]
            },
            {
              "pattern": "basket",
              "name":    "basketPage",
              "target":  ["defaultMaster", "defaultBasket"]
            }
          ],

          "targets": {
            "defaultMaster": {
              "viewId":   "master",
              "viewName": "Master",
              "viewPath": "masterpath.view", 
              "controlAggregation": "masterPages"
            },
            "pizzaList": {
              "viewId":   "master2",
              "viewName": "Master2",
              "viewPath": "masterpath.view", 
              "controlAggregation": "masterPages"
            },
            "defaultDetail": {
              "viewId":   "detail",
              "viewName": "Detail",
              "viewPath": "mainpath.view", 
              "controlAggregation": "detailPages"
            },
            "detailPizza": {
              "viewId":   "pizzainfo",
              "viewName": "PizzaInfo",
              "viewPath": "productpath.view", 
              "controlAggregation": "detailPages"
            },
            "defaultBasket": {
              "viewId":   "basket",
              "viewName": "Basket",
              "viewPath": "basketpath.view"
            },
            "notFound": {
              "viewId":   "notfound",
              "viewName": "PageNotFound"
            }
          }
        }
    }
}